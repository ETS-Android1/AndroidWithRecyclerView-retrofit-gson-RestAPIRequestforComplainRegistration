<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--image view to display our course image-->


        <!--text view for our course name-->
        <TextView
            android:id="@+id/idMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Message "
/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/idBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:textSize="12dp"
                android:textStyle="bold"

                />
            <!--text view for our batch name-->

            <!--text view to display course tracks-->

        </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
        android:id="@+id/i_agree"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:padding="2dp"
        android:src="@drawable/ic_baseline_thumb_up_24">


        </ImageView>
        <TextView
            android:id="@+id/idAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0"
            android:textSize="8dp"
            android:text="I agree"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/agreeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0"
            android:textSize="8dp"
            android:text="እኔም እስማማለሁ"
            android:textStyle="bold"

            />
        <ImageView
            android:id="@+id/i_disagree"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:padding="2dp"
            android:src="@drawable/ic_baseline_thumb_down_24"></ImageView>
        <TextView
            android:id="@+id/idDisAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0"
            android:text="I disagree"
            android:textSize="8dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/disagreeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0"
            android:text="እኔ አልስማማም ስም ማጥፋት ነው"
            android:textSize="8dp"
            android:textStyle="bold"

            />
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
